<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/css/admin/style.css" />
    <title>admin</title>
</head>

<body>
    <!-- ---------------For Profile Info Updates-------------- -->
    <div id="profileUpdateModal" class="modalProfile">
        <div class="modal-content">
            <span id="closeBtn" class="closeBtnProfile">&times;</span>
            <h2>Update your A/c</h2>
            <form action="/admin/editProfile" method="POST">
                <input type="text" name="userName" placeholder="userName" value="<%= admin.userName %>">
                <input type="text" name="fullName" placeholder="fullName" value="<%= admin.fullName %>">
                <input type="email" name="email" placeholder="Email" value="<%= admin.email %>">

                <div class="submitBtn">
                    <button type="submit">Submit</button>
                </div>
            </form>

        </div>
    </div>

    <!-- ---------------For add admin-------------- -->
    <div id="addAdminModal" class="modalAddAdmin">
        <div class="modal-content">
            <span id="closeBtn" class="closeBtnAddAdmin">&times;</span>
            <h2>Add Admin</h2>
            <form action="/admin/addAdmin" method="POST">
                <input type="text" name="userName" placeholder="userName">
                <input type="text" name="fullName" placeholder="fullName">
                <input type="email" name="email" placeholder="Email">
                <input type="password" name="password" placeholder="password">
                <div class="submitBtn">
                    <button type="submit">Submit</button>
                </div>
            </form>

        </div>
    </div>
    <!-- Navbar -->
    <div class="navbar">
        <h2>Admin Dashboard</h2>
        <div class="admin-info">
            <span>Welcome, <%= admin.userName %></span>
        </div>
        <div id="sideNaviBtn">
            <div class="setNaviBtn">
                <div class="lines"></div>
                <div class="lines"></div>
                <div class="lines"></div>
            </div>
        </div>
        <!-- ---------side profile edit nav----------- -->
        <div class="profileSideNavi hideNaviBar">
            <div class="setNavibox">

                <a href="" class="editProfile"><span class="elemsBox">Edit profile</span></a>
                <a href="" class="addAdmin"><span class="elemsBox">Add Admin</span></a>
                <a href="/users/logOut"><span class="elemsBox">Log Out</span></a>
            </div>
        </div>
    </div>

    <div class="admin-dashboard">
        <!-- Sidebar -->
        <div id="sidebar" class="profileSideBar">
            <div class="pined pinnedProfileBar">
                <div class="headParts profileBarHead">
                    <div class="sideLogo">
                        <img src="/images/logo.png" alt="">
                    </div>
                    <h1>CodeMe</h1>
                </div>

                <div class="otherRegex">
                    <a href="/">
                        <div class="parts profileParts">
                            <div class="sideLogoParts">
                                <img src="/images/sidebarImages/home1-removebg-preview.png" alt="">
                            </div>
                            <h6>Home</h>
                        </div>
                    </a>

                    <a href="regex">
                        <div class="parts profileParts">
                            <div class="sideLogoParts">
                                <img src="/images/sidebarImages/regex-removebg-preview.png" alt="">
                            </div>
                            <h6>Regex</h>
                        </div>
                    </a>

                    <a href="uicode">

                        <div class="parts profileParts">
                            <div class="sideLogoParts">
                                <img src="/images/sidebarImages/code-removebg-preview.png" alt="">
                            </div>
                            <h6>Code+UI</h>
                        </div>
                    </a>

                    <a href="#" id="adminDashboard">

                        <div class="parts profileParts">
                            <div class="sideLogoParts">
                                <img src="/images/sidebarImages/dashboard.png" alt="">
                            </div>
                            <h6>Dashboard</h>
                        </div>
                    </a>
                    <a href="#" id="developerManagement">

                        <div class="parts profileParts">
                            <div class="sideLogoParts">
                                <img src="/images/sidebarImages/user.png" alt="">
                            </div>
                            <h6>Developer Management</h>
                        </div>
                    </a>

                    <a href="#" id="viewerManagement">

                        <div class="parts profileParts">
                            <div class="sideLogoParts">
                                <img src="/images/sidebarImages/user.png" alt="">
                            </div>
                            <h6>Viewer Management</h>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- First Container with Boxes -->
            <div id="dashboardContainer">
                <div class="dashboard-container" id="firstContainer">
                    <div class="dashboard-box" id="developerBox">
                        <h3>Developers</h3>
                        <p id="developerCount">
                            <%= developerCount %>
                        </p>
                    </div>
                    <div class="dashboard-box" id="viewerBox">
                        <h3>Viewers</h3>
                        <p id="viewerCount">
                            <%= viewerCount %>
                        </p>
                    </div>
                    <div class="dashboard-box" id="postBox">
                        <h3>Posts</h3>
                        <p id="postCount">
                            <%= postCount %>
                        </p>
                    </div>
                </div>

                <!-- Second Container with Detailed Information -->
                <div class="details-container" id="secondContainer">
                    <!-- Developer Table -->
                    <div id="developerTable">
                        <h3>Developer Details</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Post</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% developers.forEach(developer=>{ %>
                                    <tr>
                                        <td>
                                            <%= developer._id %>
                                        </td>
                                        <td>
                                            <%= developer.userName %>
                                        </td>
                                        <td>
                                            <%= developer.email %>
                                        </td>
                                        <td>
                                            <%= developer.developerPostCount %>
                                        </td>
                                    </tr>
                                    <% }) %>

                            </tbody>
                        </table>
                    </div>

                    <!-- Viewer Table -->
                    <div id="viewerTable" style="display: none">
                        <h3>Viewer Details</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Email</th>

                                </tr>
                            </thead>
                            <tbody>
                                <% viewers.forEach(viewer=>{ %>
                                    <tr>
                                        <td>
                                            <%= viewer._id %>
                                        </td>
                                        <td>
                                            <%= viewer.userName %>
                                        </td>
                                        <td>
                                            <%= viewer.email %>
                                        </td>
                                    </tr>
                                    <% }) %>

                            </tbody>
                        </table>
                    </div>

                    <!-- Post Table -->
                    <div id="postTable" style="display: none">
                        <h3>Post Details</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>Post ID</th>
                                    <th>Post Name</th>
                                    <th>Username</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% userPosts.forEach(post=>{ %>
                                    <tr>
                                        <td>
                                            <%= post._id %>
                                        </td>
                                        <td>
                                            <%= post.postName %>
                                        </td>
                                        <td>
                                            <%= post.user.userName %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div id="developerContainer" class="developer-container" style="display: none;">
                <div class="developer-row">
                    <% developers.forEach(developer=>{ %>
                        <div class="developer-box">
                            <% if (!developer.dp || developer.dp==="" ) { %>
                                <img src="/images/profilePic.png" alt="Default Profile Picture" class="profile-pic">
                                <% } else { %>
                                    <img src="<%= developer.dp %>" alt="Profile Picture" class="profile-pic">
                                    <% } %>
                                        <p>Id : <%= developer._id %>
                                        </p>
                                        <p>Username : <%= developer.userName %>
                                        </p>
                                        <p>Email : <%= developer.email %>
                                        </p>
                                        <button class="postCountBtn" user="<%= developer %>">
                                            Post = <%= developer.developerPostCount %>
                                        </button>

                                        <button class="userEditBtn">
                                            Edit
                                        </button>

                                        <button class="userDeleteBtn">
                                            Delete
                                        </button>

                        </div>
                        <% }) %>
                </div>

                <div class="eachDeveloperPosts" style="display: none;">
                    
                </div>

                <div id="viewerContainer" class="viewer-container" style="display: none;">
                    <h2>Viewer Management</h2>
                    <table id="viewerTable">
                        <thead>
                            <tr>
                                <th>User ID</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% viewers.forEach(viewer=>{ %>
                                <tr>
                                    <td>
                                        <%= viewer._id %>
                                    </td>
                                    <td>
                                        <%= viewer.userName %>
                                    </td>
                                    <td>
                                        <%= viewer.email %>
                                    </td>
                                    <td><button class="editBtn" data-userid="1">Edit</button></td>
                                    <td><button class="deleteBtn" data-userid="1">Delete</button></td>
                                </tr>
                                <% }) %>

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
</body>

<script src="/js/admin/index.js"></script>

</html>